{
  "name": "http-sentinel",
  "version": "1.0.12",
  "description": "ðŸ’¥A TypeScript library that provides a comprehensive set of HTTP error classes and utilities for handling HTTP errors in your applications.",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "lint": "eslint . --ext .ts,.js",
    "husky:init": "husky",
    "format": "prettier --write \"**/*.{js,ts}\"",
    "check": "prettier --check \"**/*.{js,ts}\"",
    "test": "vitest",
    "test:ci": "vitest run --coverage"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint",
      "prettier --write"
    ]
  },
  "lint-staged:options": {
    "allowEmpty": true
  },
  "keywords": [
    "http",
    "errors",
    "error handling",
    "http errors",
    "sentinel",
    "middleware"
  ],
  "author": "Jorge Rosbel",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JorgeRosbel/http-sentinel.git"
  },
  "bugs": {
    "url": "https://github.com/JorgeRosbel/http-sentinel/issues"
  },
  "homepage": "https://github.com/JorgeRosbel/http-sentinel#readme",
  "devDependencies": {
    "@esbuild-plugins/tsconfig-paths": "^0.1.2",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
